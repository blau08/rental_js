<li>{{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}} in {{rental.city}}{{/link-to}}
  {{#if isImageShowing }}
    <p><img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}}></p>
  {{else}}
    <button class="btn btn-primary" {{action 'imageShow'}}>Show image</button>
  {{/if}}
  {{update-rental rental=rental update="update"}}
  <button class="btn btn-danger" {{action 'delete' rental}}>Delete</button>
</li>
